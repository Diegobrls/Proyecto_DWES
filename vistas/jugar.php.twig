{% extends "plantilla.php.twig" %}

{% block cabeza %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>
{% endblock %}

{% block cuerpo %}
    <div class="container mt-4">
        {% if datos %}
            <div class="p-4">
                <h4>{{ datos.textoPregunta }}</h4>
                <form method="post" action="procesarRespuesta">
                    <button name="respuesta" value="respuesta 1" class="btn btn-primary mb-2">{{ datos.respuestaUno }}</button>
                    <button name="respuesta" value="respuesta 2" class="btn btn-primary mb-2">{{ datos.respuestaDos }}</button>
                    <button name="respuesta" value="respuestaCorrecta" class="btn btn-primary mb-2">{{ datos.respuestaCorrecta}}</button>
                </form>
            </div>
        {% else %}
            <p>No hay m√°s preguntas.</p>
        {% endif %}
    </div>
{% endblock %}
